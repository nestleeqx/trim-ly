generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum SubscriptionStatus {
  active
  canceled
  past_due
}

enum Theme {
  light
  dark
  system
}

enum LinkStatus {
  active
  disabled
  expired
}

model Plan {
  id          String @id
  name        String @unique
  linksLimit  Int
  clicksLimit Int

  users User[]
}

model User {
  id           String  @id @default(cuid())
  email        String  @unique
  passwordHash String?
  name         String?
  username     String? @unique
  avatarURL    String?

  theme Theme @default(system)

  planId             String              @default("free")
  plan               Plan                @relation(fields: [planId], references: [id])
  subscriptionStatus SubscriptionStatus?

  emailVerified DateTime?
  provider      String?
  providerId    String?

  usage UserUsage?

  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  passwordResetTokens PasswordResetToken[]

  links Link[]
  tags  Tag[]

  @@unique([provider, providerId])
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  userId    String
  tokenHash String    @unique
  expiresAt DateTime
  usedAt    DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId])
}

model UserUsage {
  userId       String @id
  linksCreated Int    @default(0)
  clicksTotal  Int    @default(0)
  user         User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Link {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  targetUrl    String
  slug         String     @unique
  title        String?
  passwordHash String?
  expiresAt    DateTime?
  status       LinkStatus @default(active)

  clicksTotal Int @default(0)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  tags        LinkTag[]
  clickEvents LinkClickEvent[]

  @@index([userId, createdAt])
  @@index([expiresAt])
  @@index([status])
}

model Tag {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name String
  slug String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  links LinkTag[]

  @@unique([userId, slug])
  @@index([userId, name])
}

model LinkTag {
  linkId String
  tagId  String

  link Link @relation(fields: [linkId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([linkId, tagId])
  @@index([tagId])
}

model LinkClickEvent {
  id     String @id @default(cuid())
  linkId String
  link   Link   @relation(fields: [linkId], references: [id], onDelete: Cascade)

  clickedAt  DateTime @default(now())
  ipHash     String?
  country    String?
  city       String?
  source     String?
  referrer   String?
  userAgent  String?
  deviceType String?
  os         String?
  browser    String?

  @@index([linkId, clickedAt])
  @@index([source, clickedAt])
}
